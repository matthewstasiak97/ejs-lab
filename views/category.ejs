<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= category %> - Menu</title>
  </head>
  <body>
    <%- include('partials/nav') %>

    <h1><%= category %></h1>

    <% if (menuItems.length > 0) { %> <% menuItems.forEach(item => { %>
    <div>
      <h2><%= item.name %> - $<%= item.price.toFixed(2) %></h2>
      <p><%= item.details %></p>
      <p>Rating: <%= item.rating %>/5</p>
    </div>
    <% }); %> <% } else { %>
    <p>No items found in this category.</p>
    <% } %>
  </body>
</html>
